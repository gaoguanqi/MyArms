<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitleBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitleBar.Splash">
        <item name="android:windowBackground">@drawable/shape_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoTitleBar.Welcome">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--线-->
    <style name="style_view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/view_line</item>
    </style>


    <!--弹窗的样式-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_center_anim">
        <item name="android:windowEnterAnimation">@anim/modal_in</item>
        <item name="android:windowExitAnimation">@anim/modal_out</item>
    </style>

    <style name="dialog_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="anim_slide" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_right</item>
    </style>

    <style name="AppTheme.NoTitleBar.Slide">
        <item name="android:windowAnimationStyle">@style/anim_slide</item>
    </style>

    <!--load more-->
    <style name="LoadingProgressBar">
        <item name="android:indeterminateDrawable">@drawable/anim_loading</item>
        <item name="android:minWidth">27dip</item>
        <item name="android:maxWidth">27dip</item>
        <item name="android:minHeight">27dip</item>
        <item name="android:maxHeight">27dip</item>
    </style>

</resources>
